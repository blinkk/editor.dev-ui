{
  "name": "@blinkk/live-edit",
  "version": "1.0.1",
  "license": "MIT",
  "homepage": "https://blinkkcode.github.com/live-edit",
  "description": "Structured content editor with live previews.",
  "keywords": [
    "structured",
    "document",
    "ui",
    "editor",
    "live"
  ],
  "bugs": {
    "url": "https://github.com/blinkkcode/live-edit/issues"
  },
  "main": "dist/src/index.ts",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/blinkkcode/live-edit.git"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist/src",
    "dist/css"
  ],
  "scripts": {
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc && npx gulp compile && webpack --config webpack.prod.js",
    "coverage": "codecov",
    "dev": "concurrently \"npx ava --watch\" \"tsc --watch\"",
    "docs": "typedoc",
    "fix": "node ./node_modules/eslint/bin/eslint --fix src/**/*.ts",
    "hosted": "concurrently \"webpack --config webpack.server.js\" \"tsc --watch\" \"npx gulp watch\" \"nodemon dist/src/server/server.js\"",
    "serve": "concurrently \"webpack serve --config webpack.dev.js\" \"npx gulp watch\"",
    "test": "nyc ava",
    "test-ci": "nyc --reporter=lcov ava && codecov"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/javascript-time-ago": "^2.0.2",
    "@types/js-yaml": "^4.0.0",
    "@types/lodash.merge": "^4.6.6",
    "@types/marked": "^2.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.33",
    "@types/nunjucks": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "ava": "^3.14.0",
    "codecov": "^3.8.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.21.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-class-members": "^1.9.0",
    "express": "^4.17.1",
    "gts": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "nodemon": "^2.0.7",
    "nunjucks": "^3.2.3",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.30",
    "typescript": "^4.2.3",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@blinkk/selective-edit": "^1.0.23",
    "javascript-time-ago": "^2.3.4",
    "js-yaml": "^4.0.0",
    "lodash.merge": "^4.6.2",
    "marked": "^2.0.1"
  }
}
