{% import "/views/macros/asset.njk" as asset %}
{% import "/views/macros/button.njk" as button %}

<div class="{{partial.partial}} {% for option in partial.options %}{{partial.partial}}--{{option}}{% endfor %}">
    {% for column in partial.columns %}
        <div class="columns-50x50-simple__column
            {% if column.primary %}columns-50x50-simple__column--primary{% endif %}
            {% if column.asset %}columns-50x50-simple__column--assets{% endif %}
            ">
            {% if column.primary %}
                <div class="columns-50x50-simple__column__primary">
                    <div class="columns-50x50-simple__column__primary__title">
                        {{column.primary.title}}
                    </div>
                    <div class="columns-50x50-simple__column__primary__body">
                        {{column.primary.body}}
                    </div>
                    {% if column.primary.buttons %}
                        <div class="columns-50x50-simple__column__primary__buttons">
                            {% for item in column.primary.buttons %}
                                {{button.button(item)}}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
            {% if column.asset %}
                <div class="columns-50x50-simple__column__assets">
                    <div class="columns-50x50-simple__column__assets__asset">
                        {{asset.asset(column.asset)}}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>